<!DOCTYPE html>
<html>
  <head>
    <title>Plato</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Plato', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Users', users_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to 'Organisations', organisations_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to 'Boards', boards_path, class: 'nav-link' %>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Dropdown
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#">Disabled</a>
          </li>
        </ul>
        <p class="navbar-text float-right">
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.name %></strong>.
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
        </p>
      </div>
    </nav>


    <% if false %>
    <div class="sidenav">
      <div id='defaultnav'>
        <ul>
          <li><%= link_to 'Home', todo_index_path %></li>
          <li><%= link_to 'New Request', new_data_request_path %></li>
          <li><%= link_to 'All Requests', data_requests_path %></li>
        </ul>
      </div>

      <div id='defaultNav'>
          <ul>
            <% if session[:user_type] == 'Admin' %>
            <li><%= link_to 'Users', users_path %></li>
            <% end %>
            <li><%= link_to 'Assignations', assignations_path %></li>  
          </ul>
      </div>
      
      <% if user_signed_in? %>
      <div id='loggedInNav'>
          <ul>
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %>         
          </ul>
      </div>
      <% else %>
      <div id='loggedInNav'>
          <%= link_to 'Login',  new_user_session_path, method: :get %>
      </div>
      <% end %>
    </div>   

    <% end %>

    <div id="main">
      <% if notice %>
        <p class="alert alert-success" id='notice'><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger" id='alert'><%= alert %></p>
      <% end %>
      <div class='container'><%= yield %></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  </body>
</html>

<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>No of users</th>
      <th>Unlimited boards</th>
      <th>Active</th>
      <th>Plan type</th>
      <th>Monthly price</th>
      <th>Annual price</th>
      <th>Additional user price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.no_of_users %></td>
        <td><%= plan.unlimited_boards %></td>
        <td><%= plan.active %></td>
        <td><%= plan.plan_type %></td>
        <td><%= plan.monthly_price %></td>
        <td><%= plan.annual_price %></td>
        <td><%= plan.additional_user_price %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

